{
    "name": "iiserm_pc",
    "version": "1.0.1",
    "description": "Unofficial IISER-M App for pc",
    "main": "src/main/app.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder",
        "pack": "electron-builder --dir"
    },
    "author": "Dhruva Sambrani<dhruvasambrani19@gmail.com>",
    "productName": "Unofficial IISER-M App",
    "license": "MIT",
    "build": {
        "appId": "com.dhruva.iisermpc",
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "synopsis": "The Desktop version of the Android App",
            "category": "Network"
        },
        "deb": {
            "priority": "optional"
        },
        "win": {
            "target": [
                "NSIS"
            ],
            "icon": "build/icon.ico"
        },
        "nsis": {
            "deleteAppDataOnUninstall": "true",
            "oneClick": "false",
            "allowToChangeInstallationDirectory": "true"
        }
    },
    "devDependencies": {
        "electron": "^9.1.0",
        "electron-builder": "^21.2.0"
    },
    "dependencies": {
        "dpkg": "^1.0.0",
        "electron-photon": "^1.1.6"
    }
}
